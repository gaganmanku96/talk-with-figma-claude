    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.0",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "typescript": "^5.4.5"
  }
